<?xml version="1.0" encoding="UTF-8"?>
<states>
  <!-- MENU STATE -->
  <menu>
    <!-- array textures -->
    <textures>
      <texture filename="assets/button.png" id="playbutton"/>
      <texture filename="assets/exit.png" id="exitbutton"/>
    </textures>
    <!-- array objects -->
    <objects>
      <object type="MenuButton" x="100" y="100" width="400" height="100" id="playbutton" numframes="0" callbackid="1" animspeed="0"/>
      <object type="MenuButton" x="100" y="300" width="400" height="100" id="exitbutton" numframes="0" callbackid="2" animspeed="0"/>
    </objects>
  </menu>

  <!-- PLAY STATE -->
  <play>
    <!-- array textures -->
    <textures>
      <texture filename="assets/helicopter1.png" id="helicopter1"/>
      <texture filename="assets/helicopter2.png" id="helicopter2"/>
    </textures>
    <!-- array objects -->
    <objects>
      <object type="Player" x="500" y="100" width="128" height="55" id="helicopter1" numframes="4" callbackid="0" animspeed="0"/>
      <object type="Enemy" x="100" y="100" width="128" height="55" id="helicopter2" numframes="4" callbackid="0" animspeed="0"/>
    </objects>
  </play>

  <!-- PAUSE -->
  <pause>
      <!-- array textures -->
    <textures>
      <texture filename="assets/main.png" id="mainbutton"/>
      <texture filename="assets/resume.png" id="resumebutton"/>
    </textures>
    <!-- array objects -->
    <objects>
      <object type="MenuButton" x="200" y="100" width="200" height="80" id="mainbutton" numframes="0" callbackid="1" animspeed="0"/>
      <object type="MenuButton" x="200" y="300" width="200" height="80" id="resumebutton" numframes="0" callbackid="2" animspeed="0"/>
    </objects>
  </pause>

  <!-- GAMEOVER STATE -->
  <gameover>
    <!-- array textures -->
    <textures>
      <texture filename="assets/gameover.png" id="gameovertext"/>
      <texture filename="assets/main.png" id="mainbutton"/>
      <texture filename="assets/resume.png" id="resumebutton"/>
    </textures>
    <!-- array objects -->
    <objects>
      <object type="AnimatedGraphic" x="200" y="100" width="190" height="30" id="gameovertext" numframes="0" callbackid="0" animspeed="0"/>
      <object type="MenuButton" x="200" y="200" width="200" height="80" id="mainbutton" numframes="0" callbackid="1" animspeed="0"/>
      <object type="MenuButton" x="200" y="300" width="200" height="80" id="resumebutton" numframes="0" callbackid="2" animspeed="0"/>
    </objects>
  </gameover>
</states>

